<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/viewFlipper"
        android:layout_gravity="center_horizontal">

        <FrameLayout
            android:layout_width="match_parent" android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/main_screen_1"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/view_screen_1"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/ic_menu_manage" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/view_screen_2"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_menu_manage" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/view_screen_3"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:src="@drawable/ic_menu_manage" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/view_screen_4"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/ic_menu_manage" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent" android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/main_screen_2"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/view2_screen_1"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/ic_menu_manage" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/view2_screen_2"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_menu_manage" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/view2_screen_3"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:src="@drawable/ic_menu_manage" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/view2_screen_4"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/ic_menu_manage" />
        </FrameLayout>

        <FrameLayout
        android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/main_screen_3"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/view3_screen_1"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/ic_menu_manage" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/view3_screen_2"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_menu_manage" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/view3_screen_3"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:src="@drawable/ic_menu_manage" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/view3_screen_4"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/ic_menu_manage" />

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent" android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/main_screen_4"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/view4_screen_1"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/ic_menu_manage" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/view4_screen_2"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_menu_manage" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/view4_screen_3"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:src="@drawable/ic_menu_manage" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/view4_screen_4"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/ic_menu_manage" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Started"
                android:id="@+id/get_start"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="50dp" />
        </FrameLayout>

    </ViewFlipper>
</LinearLayout>