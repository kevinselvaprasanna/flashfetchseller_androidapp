<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ViewFlipper

        android:id="@+id/viewFlipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_screen_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />


            <ImageView
                android:id="@+id/view_screen_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="75dp"
                android:src="@drawable/slide1" />

            <ImageView
                android:id="@+id/view_screen_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/slide2" />

            <ImageView
                android:id="@+id/view_screen_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/slide3" />

            <ImageView
                android:id="@+id/view_screen_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="75dp"
                android:src="@drawable/slide1" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_screen_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />


            <ImageView
                android:id="@+id/view2_screen_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="75dp"
                android:src="@drawable/slide1" />

            <ImageView
                android:id="@+id/view2_screen_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/slide2" />

            <ImageView
                android:id="@+id/view2_screen_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/slide3" />

            <ImageView
                android:id="@+id/view2_screen_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="75dp"
                android:src="@drawable/slide1" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_screen_3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/view3_screen_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="75dp"
                android:src="@drawable/slide1" />

            <ImageView
                android:id="@+id/view3_screen_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/slide2" />

            <ImageView
                android:id="@+id/view3_screen_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/slide3" />

            <ImageView
                android:id="@+id/view3_screen_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="75dp"
                android:src="@drawable/slide1" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_screen_4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/view4_screen_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="75dp"
                android:src="@drawable/slide1" />

            <ImageView
                android:id="@+id/view4_screen_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/slide2" />

            <ImageView
                android:id="@+id/view4_screen_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/slide3" />

            <ImageView
                android:id="@+id/view4_screen_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="75dp"
                android:src="@drawable/slide1" />

            <Button
                android:id="@+id/get_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="50dp"
                android:text="Get Started" />
        </FrameLayout>

    </ViewFlipper>
</LinearLayout>