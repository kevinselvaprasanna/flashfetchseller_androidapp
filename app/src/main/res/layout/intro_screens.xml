<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

        <ViewFlipper
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/viewFlipper"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent" android:layout_height="match_parent">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/main_screen_1"
                    android:layout_gravity="center"
                    android:src="@mipmap/page1"
                    android:scaleType="fitXY" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent" android:layout_height="match_parent">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/main_screen_2"
                    android:layout_gravity="center"
                    android:src="@mipmap/page2"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent" android:layout_height="match_parent">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/main_screen_3"
                    android:layout_gravity="center"
                    android:src="@mipmap/page3"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent" android:layout_height="match_parent">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/main_screen_4"
                    android:layout_gravity="center"
                    android:src="@mipmap/page4"
                    android:scaleType="fitXY" />
            </LinearLayout>

            </ViewFlipper>


    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/view_screen_1"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="60dp"
        android:src="@drawable/slide1" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/view_screen_2"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/slide1" />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/view_screen_3"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/slide1" />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/view_screen_4"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/slide1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:id="@+id/get_start"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@color/ff_black"
        android:textColor="#fff" />

</FrameLayout>