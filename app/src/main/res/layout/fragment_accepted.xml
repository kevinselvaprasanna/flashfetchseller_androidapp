<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Accepted"
    android:orientation="vertical"
    android:background="#d5d6d9">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center"
        android:id="@+id/acceptedtext"
        android:padding="16dp"
        android:textSize="14sp"
        android:text="Itâ€™s so empty in here!!\nHint: Provide the best prices or deals to stay in the game." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center"
        android:id="@+id/no_access_text"
        android:padding="16dp"
        android:textSize="14sp"
        android:text="Wait for the access until have a fell of the application"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvNotifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fastScrollAlwaysVisible="true"
        android:fastScrollEnabled="true"
        android:overScrollMode="always" />

</LinearLayout>
